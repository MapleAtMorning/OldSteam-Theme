{
    "name": "OldSteam",
    "author": "MapleAtMorning",
    "description": "The weirdest amalgamation of modern and old steam",
    "source": "https://github.com/MapleAtMorning/OldSteam-Theme", 
    "version": "0",
    "header_image": "https://raw.githubusercontent.com/MapleAtMorning/MapleAtMorning/main/steamui.png",
    "splash_image": "https://raw.githubusercontent.com/MapleAtMorning/MapleAtMorning/main/steamui.png",

    "github": {
        "owner": "MapleAtMorning",
        "repo_name": "OldSteam-Theme"
    },

    "discord_support": {
        "inviteCodeExcludingLink": "3GkMYRvW7M"
    },
    
    "funding": {
        "kofi": "mapleatmorning"
    },

    "tags": [
        "Green",
        "Classic"
    ],

    "Conditions": {
        "Disable Avatar Status Lines": {
            "default": "true",
            "description": "Disable the avatar status lines on friends",
            "values": {
                "true": {
                    "TargetCss": {
                        "affects": [".*"],  "src": "css/config/statuslines.css"
                    }
                },
                "false": {
                }
            }
        },
        "Disable Download Logo": {
            "default": "false",
            "description": "Disable the logo that shows up on the downloads page for the currently downloading game",
            "values": {
                "true": {
                    "TargetCss": {
                        "affects": ["^Steam$"],  "src": "css/config/downloadlogo.css"
                    }
                },
                "false": {
                }
            }
        },
        "Disable Avatar Frames": {
            "default": "false",
            "description": "Disable the avatar frames around profile pictures",
            "values": {
                "true": {
                    "TargetCss": {
                        "affects": [".*"],  "src": "css/config/avatarframes.css"
                    }
                },
                "false": {
                }
            }
        },
        "Disable New Message Line": {
            "default": "true",
            "description": "Disable the yellow line and \"New Message\" text in chats",
            "values": {
                "true": {
                    "TargetCss": {
                        "affects": [".*"],  "src": "css/config/newmsgline.css"
                    }
                },
                "false": {
                }
            }
        },
        "Disable Chat Tab PFPs": {
            "default": "false",
            "description": "Disable the profile pictures in tabs for steam chat",
            "values": {
                "true": {
                    "TargetCss": {
                        "affects": [".*"],  "src": "css/config/chattabpfps.css"
                    }
                },
                "false": {
                }
            }
        }
    },

    "UseDefaultPatches": true
}
